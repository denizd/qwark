<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/bolt"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/bolt"
        android:tint="@color/colorAccentedControl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="@string/powered_by_qwark"
        android:textColor="@color/colorAccentedControl"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/bolt"
        app:layout_constraintTop_toTopOf="@+id/bolt"
        app:layout_constraintBottom_toBottomOf="@+id/bolt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="@string/made_by_deniz"
        android:textColor="@color/colorAccentedControl"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/bolt"
        app:layout_constraintTop_toTopOf="@+id/bolt"
        app:layout_constraintBottom_toBottomOf="@+id/bolt"/>


</androidx.constraintlayout.widget.ConstraintLayout>